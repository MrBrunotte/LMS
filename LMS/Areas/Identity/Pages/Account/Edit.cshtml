@page "{id}"
@model EditModel
@{
    ViewData["Title"] = "Edit";
}

<h1>@ViewData["Title"]</h1>

<div class="row">
    <div class="col-md-4">
        <form method="post">
            <h4>Edit student details.</h4>
            <hr />
            <div asp-validation-summary="All" class="text-danger"></div>
            <input type="hidden" asp-for="@Model.AppUser.Id" />

            <div class="form-group">
                <label asp-for="@Model.AppUser.FirstName"></label>
                <input asp-for="@Model.AppUser.FirstName" class="form-control" />
                <span asp-validation-for="@Model.AppUser.FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.AppUser.LastName"></label>
                <input asp-for="@Model.AppUser.LastName" class="form-control" />
                <span asp-validation-for="@Model.AppUser.LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.AppUser.Email"></label>
                <input asp-for="@Model.AppUser.Email" class="form-control" />
                <span asp-validation-for="@Model.AppUser.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.AppUser.CourseId" class="control-label"></label>
                <select asp-for="@Model.AppUser.CourseId" class="form-control" asp-items="ViewBag.CourseId"></select>
                <span asp-validation-for="@Model.AppUser.CourseId" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary">Change</button>
        </form>
    </div>
</div>
