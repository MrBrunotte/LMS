@model LMS.Models.ViewModels.TeacherOverViewModel

@{
    ViewData["Title"] = "Teacher Course Overview";
}

<h1>Course Overview</h1>

<p>
    <a asp-action="Create">Create New Course</a>
</p>
<div>
    @Model.NextCourse
</div>

<div class="row">
    <div class="col-3 coursesBox">
        <h3 class="boxTitle">Courses</h3>
        @foreach (var item in Model.Courses)
        {
            <ul class="list-group">
                <li class="list-group-item">@item.Name</li>
            </ul>
        }
    </div>
    <div class="col-2 Box">
        <div class="activityBox">
            <h3 class="boxTitle myTopPadding pl-sm-2">Module</h3>
        </div>
        <div class="activityBox">
            <h3 class="boxTitle myTopPadding pl-sm-2">Activity</h3>
        </div>
    </div>
    <div class="col-7 infoBox">
        <div class="row">
            <div class="col-sm-6 colPadding">
                <h3 class="boxTitle">Course Name goes here!</h3>
                <p class="boxParagraph">
                    Lorem, ipsum dolor sit amet consectetur adipisicing elit. Expedita necessitatibus,
                    totam tenetur voluptatum deserunt omnis dolorum laudantium, praesentium architecto
                    quaerat labore odit rem deleniti.
                </p>
            </div>
            <div class="col-sm-3 colPaddingMiddle">
                <div class="activityBox">
                    <h5 class="insideBoxes">List of Students</h5>
                </div>
            </div>
            <div class="col-sm-3 colPadding">
                <div id="listDocId" class="activityBox">
                    <h5 class="insideBoxes">List of Documents</h5>
                </div>
            </div>
        </div>
    </div>
</div>