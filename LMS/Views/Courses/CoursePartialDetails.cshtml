@model LMS.Models.ViewModels.CourseDetailsViewModel

<div class="courseInfoBox paddingTop">
    <div class="row">
        <div class="col-sm-6">

            <h4>@Model.Course.Name</h4>
            <h5>Teacher: @Model.TeacherName</h5>
            <hr />
            <h4 class="font-weight-bold">Course Description</h4>
            <p class="courseDescriptionBox">@Model.Course.Description</p>
            <hr />
            <H6 class="font-weight-bold">Course Start Date</H6>
            <p class="boxParagraph">@Model.Course.StartDate.ToString("yyyy-MM-dd")</p>
            <div col-sm-12>
                <button class="btn myBtnEdit">Edit</button>
                <button class="btn myBtnAdd">Add New Course</button>
            </div>
        </div>
        <div class="col-sm-6">
            <div id="courseDocId" class="col-sm-12 activityBox courseDocuments">
                <div class="row">
                </div>
            </div>
        </div>
    </div>
</div>
<div class="modulBox">
    <hr />
    <h3 class="font-weight-bold">Course Name</h3>
    <h4>@Model.Course.Name</h4>
    <h5>Teacher: @Model.TeacherName</h5>
    <hr />
    <h4 class="font-weight-bold">Course Description</h4>
    <p class="courseDescriptionBox">@Model.Course.Description</p>
    <hr />
    <H6  class="font-weight-bold">Course Start Date</H6>
    <p class="boxParagraph">@Model.Course.StartDate.ToString("yyyy-MM-dd")</p>
</div>
